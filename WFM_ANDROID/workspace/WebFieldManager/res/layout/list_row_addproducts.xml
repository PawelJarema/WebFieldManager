<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dip"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:id="@+id/order_product_id"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="false"
        android:text="Id"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_detail_temp_id"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="false"
        android:text="TempId"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_product_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_gravity="left"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_product_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="70"
            android:text="name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/order_free_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="10"
            android:background="@drawable/rounded_corners"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="bn"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/order_percent_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="10"
            android:background="@drawable/rounded_corners"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="%"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/order_detail_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="10"
            android:background="@drawable/rounded_corners"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/order_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="code"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="/price"
            android:textSize="12sp" />
        
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/order_popup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:orientation="horizontal" 
        android:visibility="gone">
        
         <TextView
            android:id="@+id/order_product_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="25"
            android:text="more info"
            android:textSize="12sp" />
         
         <TextView
            android:id="@+id/order_see_promo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="25"
            android:text="see promo"
            android:textSize="12sp" />
         
          <Button
            android:id="@+id/order_minus_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:layout_weight="10"
            android:text="-"
            android:textSize="12sp" />
          
          <Button
            android:id="@+id/order_plus_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:layout_weight="10"
            android:text="+"
            android:textSize="12sp" />
          
          <TextView
            android:id="@+id/order_line_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_corners"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_weight="15"
            android:textSize="12sp" />
          
          <TextView
            android:id="@+id/order_line_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_corners"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_weight="15"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>