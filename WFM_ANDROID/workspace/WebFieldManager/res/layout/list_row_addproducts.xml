<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dip"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:id="@+id/order_product_id"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="false"
        android:text="Id"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_detail_temp_id"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="false"
        android:text="TempId"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_product_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="75"
            android:text="name"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/order_detail_qty"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:layout_weight="25"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/order_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="code"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="123"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="35"
            android:text="More info"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_product_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="35"
            android:text="See promo"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_line_free_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="35"
            android:text="456"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_line_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="35"
            android:text="789"
            android:textSize="12sp" />

        
    </LinearLayout>

</LinearLayout>